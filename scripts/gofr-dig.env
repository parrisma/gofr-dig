#!/bin/bash
# Centralized GOFR-DIG Configuration
# Source this file in all scripts and tests:
#   source "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/gofr-dig.env"
#
# Environment Modes:
#   GOFR_DIG_ENV=PROD  => uses $GOFR_DIG_ROOT/data
#   GOFR_DIG_ENV=TEST  => uses $GOFR_DIG_ROOT/test/data (default)

# Determine GOFR_DIG_ROOT - the project root directory
if [ -z "${GOFR_DIG_ROOT:-}" ]; then
    # Try to get from BASH_SOURCE first (when directly sourced)
    if [ -n "${BASH_SOURCE[0]:-}" ] 2>/dev/null; then
        GOFR_DIG_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
    elif [ -n "${PROJECT_ROOT:-}" ]; then
        # Use PROJECT_ROOT if set by caller (run_tests.sh sets this)
        GOFR_DIG_ROOT="${PROJECT_ROOT}"
    else
        # Fallback to current directory
        GOFR_DIG_ROOT="$(cd "." && pwd)"
    fi
fi

# Set environment mode (PROD or TEST)
export GOFR_DIG_ENV="${GOFR_DIG_ENV:-TEST}"

# Core directories
export GOFR_DIG_ROOT
export GOFR_DIG_LOGS="${GOFR_DIG_ROOT}/logs"

# Select data directory based on environment
if [ "$GOFR_DIG_ENV" = "PROD" ]; then
    export GOFR_DIG_DATA="${GOFR_DIG_ROOT}/data"
else
    export GOFR_DIG_DATA="${GOFR_DIG_ROOT}/test/data"
fi

# Data subdirectories (based on GOFR_DIG_ENV)
export GOFR_DIG_STORAGE="${GOFR_DIG_DATA}/storage"

# Token store (always in logs directory)
export GOFR_DIG_TOKEN_STORE="${GOFR_DIG_LOGS}/gofr_dig_tokens.json"

# Create required directories if they don't exist
mkdir -p "$GOFR_DIG_LOGS"
mkdir -p "$GOFR_DIG_STORAGE"

# Server defaults
export GOFR_DIG_MCP_PORT=${GOFR_DIG_MCP_PORT:-8030}
export GOFR_DIG_MCPO_PORT=${GOFR_DIG_MCPO_PORT:-8031}
export GOFR_DIG_WEB_PORT=${GOFR_DIG_WEB_PORT:-8032}
